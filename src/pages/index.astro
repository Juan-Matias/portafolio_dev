---
import Welcome from "../components/Welcome.astro";
import Layout from "../layouts/Layout.astro";
import Badge from "../components/Badge.astro";
import SocialPill from "../icons/SocialPill.astro";
import Linkedin from "../icons/Linkedin.astro";
import GitHub from "../icons/GitHub.astro";
import Mail from "../icons/Mail.astro";
---

<Layout 
	title="Porfolio de Matias - Desarrollador y Programador web con 15 años de experiencia"
	description="Contrata a Matias Ponce para crear tu aplicacion web o móvil. desarrollador Web y Mobile">
	<main>
		<section class="w-full mx-auto lg:w-[740px] py-44">
			<h1
				class="text-white text-5xl font-bold flex flex-row gap-x-4 pb-10"
			>
				Hey, soy Matias Ponce
				<a
					href="https://www.linkedin.com/in/matias-ponce-informatico/"
					class="flex justify-center items-center"
					target="_blank"
					rel="noopener noreferrer"
				>
					<Badge>Disponible para trabajar</Badge>
				</a>
			</h1>
			<h2 class="text-2xl opacity-80 text-wrap">
				<span>+15 años de experiencia.</span>
				<span class="text-yellow-200/90"
					>Desarrollador web y creador de contenido.</span
				>
				<span class="text-red-200/90">De Santiago, Chile.</span>
				<span class="opacity-85"
					>Especializado en crear aplicaciones únicas.</span
				>
			</h2>

			<nav class="flex gap-x-4 mt-8">
				<SocialPill
					href="https://www.linkedin.com/in/matias-ponce-informatico/"
				>
					<Linkedin class="w-6 h-6" />
					Linkedin
				</SocialPill>

				<SocialPill
					href="https://github.com/Juan-Matias"
				>
					<GitHub class="w-6 h-6" />
					Github
				</SocialPill>

				<SocialPill
				href="https://github.com/Juan-Matias"
			>
				<Mail class="w-6 h-6" />
				matiasponcexd@gmail.com
			</SocialPill>

			</nav>
		</section>
	</main>
</Layout>
