---
import Layout from "../layouts/Layout.astro";
import Badge from "../components/Badge.astro";
import SocialPill from "../icons/SocialPill.astro";
import Linkedin from "../icons/Linkedin.astro";
import GitHub from "../icons/GitHub.astro";
import Mail from "../icons/Mail.astro";
import Experience from "../components/Experience.astro";
import SectionContainer from "../components/SectionContainer.astro";
import Briefcase from "../icons/Briefcase.astro";
import CodeIcon from "../icons/CodeIcon.astro";
import Proyectos from "../components/Proyectos.astro";
import ProfileCheck from "../icons/ProfileCheck.astro";
import AboutMe from "../components/AboutMe.astro";
import Hero from "../components/Hero.astro";
---

<Layout
	title="Porfolio de Matias - Desarrollador y Programador web con 15 años de experiencia"
	description="Contrata a Matias Ponce para crear tu aplicacion web o móvil. desarrollador Web y Mobile"
>
	<main class="px-4">
		<SectionContainer class="py-16 md:py-36">
			<Hero>
				<slot />
			</Hero>
		</SectionContainer>

		<div class="space-y-24">
			<SectionContainer id="experiencia">
				<h2 class="text-3xl font-semibold mb-6 flex gap-x-3 items-center">
					<Briefcase class="size-7" />
					Experiencia Laboral
				</h2>
				<Experience />
			</SectionContainer>

			<SectionContainer id="proyecto">
				<h2 class="text-3xl font-semibold mb-6 flex gap-x-3 items-center" >
					<CodeIcon class="size-7" />
					Proyectos
				</h2>
				<Proyectos />
			</SectionContainer>

			<SectionContainer id="sobre-mí">
				<h2 class="text-3xl font-semibold mb-6 flex gap-x-3 items-center">
					<ProfileCheck class="size-8" />
					Sobre Mí
				</h2>
				<AboutMe />
			</SectionContainer>
		</div>
	</main>
</Layout>
