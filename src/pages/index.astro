---
import Welcome from "../components/Welcome.astro";
import Layout from "../layouts/Layout.astro";
import Badge from "../components/Badge.astro";
import SocialPill from "../icons/SocialPill.astro";
import Linkedin from "../icons/Linkedin.astro";
import GitHub from "../icons/GitHub.astro";
import Mail from "../icons/Mail.astro";
import Experience from "../components/Experience.astro";
import SectionContainer from "../components/SectionContainer.astro";
import Briefcase from "../icons/Briefcase.astro";
import CodeIcon from "../icons/CodeIcon.astro";
import Proyectos from "../components/Proyectos.astro";
---

<Layout
	title="Porfolio de Matias - Desarrollador y Programador web con 15 años de experiencia"
	description="Contrata a Matias Ponce para crear tu aplicacion web o móvil. desarrollador Web y Mobile"
>
	<main class="px-4">
		<SectionContainer class="py-44 pb-24">
			<img
				class="rounded-full size-12 mb-4"
				src="https://avatars.githubusercontent.com/u/80530313?v=4"
				alt="Matias photo"
			/>
			<h1
				class="text-white text-2xl lg:text-5xl md:text-4xl font-bold flex flex-row gap-x-4 pb-6 lg:pb-10"
			>
				Hey, soy Matias Ponce
				<a
					href="https://www.linkedin.com/in/matias-ponce-informatico/"
					class="flex justify-center items-center"
					target="_blank"
					rel="noopener noreferrer"
				>
					<Badge>Disponible para trabajar</Badge>
				</a>
			</h1>
			<h2 class="text-xl lg:text-2xl opacity-80 text-wrap mx-w-[700px]">
				<span>+15 años de experiencia.</span>
				<span class="text-yellow-200/90"
					>Desarrollador web y creador de contenido.</span
				>
				<span class="text-red-200/90">De Santiago, Chile.</span>
				<span class="opacity-85"
					>Especializado en crear aplicaciones únicas.</span
				>
			</h2>

			<nav class="flex gap-x-4 mt-8 flex-wrap">
				<SocialPill
					href="https://www.linkedin.com/in/matias-ponce-informatico/"
				>
					<Linkedin class="size-4 md:size-6" />
					Linkedin
				</SocialPill>

				<SocialPill href="https://github.com/Juan-Matias">
					<GitHub class="size-4 md:size-6" />
					Github
				</SocialPill>

				<SocialPill href="mailto:matiasponcexd@gmail.com">
					<Mail class="size-4 md:size-6" />
					matiasponcexd@gmail.com
				</SocialPill>
			</nav>
		</SectionContainer>

		<SectionContainer id="experiencia">
			<h2 class="text-3xl font-semibold mb-6 flex gap-x-3 items-center">
				<Briefcase class="size-7" />
				Experiencia Laboral
			</h2>
			<Experience />
		</SectionContainer>

		<SectionContainer id="experiencia">
			<h2 class="text-3xl font-semibold mb-6 flex gap-x-3 items-center">
				<CodeIcon class="size-7" />
				Proyectos
			</h2>
			<Proyectos />
		</SectionContainer>
	</main>
</Layout>
