---
import Next from "../icons/Next.astro";
import Tailwind from "../icons/Tailwind.astro";

const TAGS = {
    NEXT: {
        name: "Next.js",
        class: "text-white",
        icon: Next,
    },
    TAILWIND: {
        name: "Tailwind CSS",
        class: "text-white",
        icon: Tailwind,
    },
};

const PROJECTS = [
    {
        title: "SVGL - A beautiful library with SVG logos",
        description:
            "Created from scartch with Next.js, Tailwind CSS and React",
        link: "#https://svgl.vercel.app/",
        github: "https://github.com/pheralb/svgl",
        image: "/projects/svgl.webp",

        tags: [TAGS.NEXT, TAGS.TAILWIND],
    },
];
---

{
    PROJECTS.map(({ title, description, tags, image }) => (
        <article>
            <h3 class="text-2xl font-semibold text-yellow-200 mb-2">{title}</h3>
            <p class="text-lg mb-4 text-pretty">{description}</p>
            <ul>
                {tags.map((tag) => (
                    <li>
                        <span class={tag.class}>

                        <tag.icon class="size-8" />
                        {tag.name}
                    </span>
                    </li>
                ))}
            </ul>
            <img
                class="rounded shadow-2xl shadow-white/10 "
                src={image}
                alt={`Captura de pantalla de ${image}`}
            />
        </article>
    ))
}
